rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - private (only the owner can read/write)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Everything else (not starting with /users) - public read, no write
    match /{collection}/{doc=**} {
      allow read , write: if collection != "users";   // everyone can read if not "users"
                      // block all writes unless specified above
    }
  }
}
